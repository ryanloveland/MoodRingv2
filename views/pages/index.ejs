<%- include("navbar") %>


<!-- This is the Data Graph Display Page -->
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
    <style>
        html {
            font-family: 'Lato', sans-serif;
        }
    </style>
</head>
<body>


<div class="container">
<h1 class="display-3">A Tale of Spotify Data Analysis</h1>
<% var totalValence = 0 %>
<% var totalDance = 0 %>
<% var totalPop = 0 %>
<% var recommendedCount = 0 %>
<% for (var t = 0; t < listTracks.length; t++) { %>
    <% totalValence += listTracks[t].valence %>
    <% totalDance += listTracks[t].danceability %>
    <% totalPop += listTracks[t].popularity %>
    <% recommendedCount++ %>
<% } %>


<div class="row">
    <div class="col">
        <div class="card mb-3">
            <div class="card-body p-1">
                <p class="text-center p-0 m-0">Average Danceability: <%= (totalDance/recommendedCount).toFixed(4) * 100 %></p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card mb-3">
            <div class="card-body p-1">
                <p class="text-center p-0 m-0">Average Popularity: <%= (totalPop/recommendedCount).toFixed(4) * 100 %></p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card mb-3">
            <div class="card-body p-1">
                <p class="text-center p-0 m-0">Average Valence: <%= (totalValence/recommendedCount).toFixed(4) * 100%></p>
            </div>
        </div>
    </div>
</div>

<canvas id="myChart"></canvas>
<div class="card-columns">
    <% for (var j = 0; j < listTracks.length; j++) { %>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Song # <%= j+1 %></h5>
                <span class="card-text"><%= listTracks[j].name %> by <%= listTracks[j].artist %></span>
            </div>
        </div>
    <% } %>
</div>

<script>
var ctx = document.getElementById('myChart').getContext('2d');
var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'bubble',

    // The data for our dataset
    data: {
        datasets: [
            <% for (var y = 0; y < listTracks.length; y++) { %>
                        { label: '<%= listTracks[y].name %> by <%=listTracks[y].artist %>',
                          data: [
                                { x: <%= (listTracks[y].danceability).toFixed(4) * 100 %>,
                                    y: <%= (listTracks[y].popularity).toFixed(4) * 100 %>,
                                    r: <%= (listTracks[y].valence).toFixed(4) * 30 %> } 
                                ],
                          backgroundColor: '#1db954'
                        },
            <% } %>
        ],
    },
    options: {
        legend: {
            display: false
        },
        scales: {
            yAxes: [{
                ticks: {
                    suggestedMin: 0,
                    suggestedMax: 100
                }
            }],
            xAxes: [{
                ticks: {
                    suggestedMin: 0,
                    suggestedMax: 100
                }
            }]
        }
    }
});
</script>

</div>
</body>
